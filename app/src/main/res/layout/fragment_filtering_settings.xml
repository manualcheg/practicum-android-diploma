<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/filteringSettingsToolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="@string/filtering_settings"
        app:titleTextAppearance="@style/TitleText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/workplaceTextInputLayout"
        style="@style/textInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_input_layout_height"
        android:layout_marginTop="@dimen/margin_vertical_16dp"
        android:hint="@string/workplace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choosingWorkplaceToolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectedWorkplaceTextInputEditText"
            style="@style/textInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sectorTextInputLayout"
        style="@style/textInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_input_layout_height"
        android:layout_marginTop="@dimen/margin_vertical_16dp"
        android:hint="@string/sector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choosingWorkplaceToolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectedSectorTextInputEditText"
            style="@style/textInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterTheAmountTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_input_layout_height"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginVertical="@dimen/margin_vertical"
        android:enabled="false"
        android:hint="@string/expected_salary"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:textColorHint="@color/gray_white"
        app:boxStrokeWidth="@dimen/_0dp"
        app:boxStrokeWidthFocused="@dimen/_0dp"
        app:hintTextAppearance="@style/hintTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choosingWorkplaceToolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectedEnterTheAmountTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_with_corners"
            android:backgroundTint="@color/light_gray_gray"
            android:fontFamily="@font/ys_display_regular"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="number"
            android:text="@string/enter_the_amount"
            android:textAlignment="viewStart"
            android:textColor="@color/gray_white"
            android:textSize="@dimen/text_size_main"
            app:boxStrokeWidth="@dimen/_0dp"
            app:boxStrokeWidthFocused="@dimen/_0dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/doNotShowWithoutSalaryCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal_very_small"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:drawableTint="@color/blue"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/do_not_show_without_salary"
        android:textSize="@dimen/text_size_main" />

    <LinearLayout
        android:id="@+id/filteringSettingsButtonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/padding_horizontal"
            android:background="@drawable/rectangle_with_corners"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/apply"
            android:textAllCaps="false"
            android:textColor="@color/white_universal"
            android:textSize="@dimen/text_size_main"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_vertical"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:background="@android:color/transparent"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/reset"
            android:textAllCaps="false"
            android:textColor="@color/red_white"
            android:textSize="@dimen/text_size_main"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>


</LinearLayout>