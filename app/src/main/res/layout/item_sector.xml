<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regionAndSectorFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginVertical="@dimen/margin_vertical_for_layout">

    <CheckBox
        android:id="@+id/regionAndSectorCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal_very_small"
        android:button="@null"
        android:drawableEnd="@drawable/checkbox_circle_selector"
        android:drawableTint="@color/blue"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/text_size_main"
        tools:text="Медицина" />

</FrameLayout>