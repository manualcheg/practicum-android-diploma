<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="BigHeaderText">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big_header</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_very_small</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="TitleTextBlack" parent="TitleText">
        <item name="android:textColor">@color/black_universal</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="RegularTextBlue" parent="RegularText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="RegularTextBlack" parent="RegularText">
        <item name="android:textColor">@color/black_universal</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="MediumTextWhite" parent="MediumText">
        <item name="android:textColor">@color/white_universal</item>
    </style>

    <style name="textInputLayoutStyle">
        <item name="android:enabled">false</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_input_layout_height</item>
        <item name="endIconDrawable">@drawable/ic_chevron_right</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="textInputEditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="hintTextAppearance">
        <item name="android:textSize">@dimen/text_size_menu</item>
        <item name="android:textColor">@color/gray_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlaceholderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="SalaryInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">10dp</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/padding_horizontal_smaller</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="hintTextAppearance">@style/hintTextAppearance</item>
        <item name="placeholderTextAppearance">@style/RegularText</item>
        <item name="placeholderTextColor">@color/gray_white</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="SalaryEditText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray_white</item>
    </style>



</resources>